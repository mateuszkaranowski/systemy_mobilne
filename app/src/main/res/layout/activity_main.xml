<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:id="@+id/sceneOne"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back4"
    tools:context=".MainActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal"
        android:background="#DD551F"
        android:padding="20dp"
        android:id="@+id/linea"
        android:gravity="center"
        android:layout_marginStart="20dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="50dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="WYNIK: "
            android:textSize="26sp"
            android:textColor="#592902"/>
        <TextView
            android:id="@+id/score"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textColor="#DFB8AB"/>
    </LinearLayout>

    <GridLayout
        android:id="@+id/sceneGrid"
        android:layout_width="match_parent"
        android:layout_height="533dp"
        android:orientation="horizontal">

    </GridLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent">
        <Button
            android:textColor="#3D1201"
            android:backgroundTint="#B24926"
            android:layout_marginTop="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:text="Profil gracza"
            android:onClick="goToProfile"
            tools:ignore="OnClick" />
        <Button
            android:textColor="#2C0D01"
            android:backgroundTint="#EA4406"
            android:layout_marginTop="40dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/button2"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:onClick="goToLevel"
            android:text="Wybór poziomu" />

        <Button
            android:textColor="#3D1201"
            android:backgroundTint="#B24926"
            android:layout_marginTop="60dp"
            android:layout_marginRight="5dp"
            android:layout_marginLeft="5dp"
            android:id="@+id/button3"
            android:layout_width="120dp"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:onClick="goTable"
            android:text="Odwiedź moją stronę! :)" />
    </LinearLayout>


</LinearLayout>