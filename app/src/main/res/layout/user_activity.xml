<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:id="@+id/startScene10"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back8"
    android:weightSum="10"
    tools:context=".UserActivity">
    
    <ImageView
        android:layout_marginTop="10sp"
        android:id="@+id/camera"
        android:layout_gravity="center"
        android:layout_width="300dp"

        android:layout_height="400dp"/>

    <EditText
        android:id="@+id/nameUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:singleLine="true"
        android:hint="Podaj imię"
        android:layout_marginTop="30sp"
        android:padding="20sp"
        android:background="@drawable/edittext_background"/>
    <EditText
        android:id="@+id/nickUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        android:singleLine="true"
        android:hint="Podaj swój nick"
        android:layout_marginTop="30sp"
        android:padding="20sp"
        android:background="@drawable/edittext_background"/>
    <LinearLayout
        android:layout_marginTop="20sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/buttonCamera"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:backgroundTint="#E8673C"
            android:src="@drawable/ic_photo"
            android:textColor="#3D1201" />

        <Button
            android:id="@+id/submitButton"
            android:layout_width="120dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10sp"
            android:backgroundTint="#932905"
            android:text="Zapisz dane"
            android:textSize="15sp" />

        <Button
            android:id="@+id/btn_getData"
            android:layout_width="155dp"
            android:layout_height="100dp"
            android:layout_marginLeft="10sp"
            android:layout_marginTop="10sp"
            android:backgroundTint="#932905"
            android:paddingVertical="30sp"
            android:text="Pobierz dane"
            android:textSize="15sp" />
    </LinearLayout>

</LinearLayout>